{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "ES2020",
    "sourceMap": true,
    "baseUrl": "src",
    "outDir": "dist",
    "noImplicitAny": false,
    "removeComments": false,
    "newLine": "lf",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "alwaysStrict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
